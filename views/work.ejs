var template_work = `

<%

if (item['@graph']) {
	item = item['@graph'][0];
}
%>

<div class="row">

	<div class="col s12 m2 hide-on-small-only center-align">
				
			<%
			var thumbnailUrl = "https://via.placeholder.com/80x100";
			
			if (item.identifier) {
				 var id = '';
	 
				// Internet Archive
				id = get_property_value(item.identifier, 'internetarchive');	  
				if (id != '') { 				
					thumbnailUrl = "//archive.org/download/" + id + "/page/cover_thumb.jpg";
				} 	

				// BHL
				id = get_property_value(item.identifier, 'bhl page');	  
				if (id != '') { 				
					thumbnailUrl = "//www.biodiversitylibrary.org/pagethumb/" + id + ",200,200";
				} 	


			}

			%>
		
			<img class="z-depth-2" style="background:white;width:80px;height:100px;object-fit: cover;object-position: 50% 50%;" src="http://exeg5le.cloudimg.io/s/height/100/<%- thumbnailUrl %>" >

	</div>

	<div class="col s12 m10">
		
	<!-- headline is item name -->
	<b style="font-size:1.5em;">				
		<%- get_literal(item.name) %>
		<% document.title = get_literal(item.name); %>
		(<a href="<%- item['@id'] %>" target="_new"><%- item['@id'].replace('http://www.wikidata.org/entity/', '') %></a>)
	</b>

	<!-- authors -->
	<% if (item.author) { %>
		<div class="section">					
		<% for(var i in item.author) { %>
			<div class="chip">
				<% if (item.author[i].identifier && get_property_value(item.author[i].identifier, 'orcid')) { %>
					<img style="vertical-align:baseline" src="images/logos/ORCID-iD_icon-vector.svg">
				<% } %>
				<% if (item.author[i]['@id'].match('wikidata.org/entity/Q')) { %>
					<a href="?id=<%- item.author[i]['@id'].replace('http://www.wikidata.org/entity/', '') %>">
				<% } %>
				<%- get_literal(item.author[i].name) %>
				<% if (item.author[i]['@id'].match(/wikidata/)) { %>
					</a>
				<% } %>								
			</div>
		<% } %>
		</div>
	<% } %>

	<!-- publication outlet -->
	<div style="color:grey;">
		<% if (item.isPartOf) { 
		%>
				Published 
		<% if (item.datePublished) {%>
		<%= isodate_to_string(item.datePublished) %>
		<% } %>				
				
				in
				<em>
				<%- get_literal(item.isPartOf.name) %>
				</em>
		<% } %>

		<% if (item.volumeNumber) { %>
			<%- item.volumeNumber %>
		<% } %>

		<% if (item.issueNumber) {%>
		(<%= get_literal(item.issueNumber) %>)
		<% } %>	

		<% if (item.pagination) { %>
			pages
			<%- item.pagination %>
		<% } %>

		

	</div>
								
	<!-- actions -->
	<div class="section" >
	
	
		<% if (item.identifier) {
			 var id = '';
	 		%>	
	 
			
			<% 
			// DOI
			id = get_property_value(item.identifier, 'doi');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://doi.org/<%- id %>" target="_new">DOI:<%- id %></a>
			<% } %>	
			
			<% 
			// Handle
			id = get_property_value(item.identifier, 'handle');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://hdl.handle.net/<%- id %>" target="_new">HANDLE:<%- id %></a>
			<% } %>		
			
			<% 
			// BioStor
			id = get_property_value(item.identifier, 'biostor');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://biostor.org/reference/<%- id %>" target="_new">BIOSTOR:<%- id %></a>
			<% } %>						

			<% 
			// BHL
			id = get_property_value(item.identifier, 'bhl page');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://www.biodiversitylibrary.org/page/<%- id %>" target="_new">BHL:<%- id %></a>
			<% } %>						
			
			<% 
			// JSTOR
			id = get_property_value(item.identifier, 'jstor');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://www.jstor.org/stable/<%- id %>" target="_new">JSTOR:<%- id %></a>
			<% } %>	
			
			<% 
			// PMC
			id = get_property_value(item.identifier, 'pmc');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://www.ncbi.nlm.nih.gov/pmc/articles/PMC<%- id %>" target="_new">PMCID: PMC<%- id %></a>
			<% } %>	
			

			<% 
			// PMID
			id = get_property_value(item.identifier, 'pmid');	  
			if (id != '') {  %>
				<a class="btn blue accent-3" href="https://www.ncbi.nlm.nih.gov/pubmed/<%- id %>" target="_new">PMID:<%- id %></a>
			<% } %>	
	
		
		<% } %>	

	
	</div>

	<!-- view work -->
	<div class="section">
		<% if (item.identifier) {
			 var id = '';
	 
			// Internet Archive
			id = get_property_value(item.identifier, 'internetarchive');	  
			if (id != '') {  %>	
				<iframe src="//archive.org/embed/<%= id %>" width="100%" height="400" frameborder="0" webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen></iframe>
			<% }	
			
			if (id == '') {
				id = get_property_value(item.identifier, 'biostor');	  
				if (id != '') {  
					id = 'biostor-' + id; %>					
				<iframe src="//archive.org/embed/<%= id %>" width="100%" height="400" frameborder="0" webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen></iframe>
			<% } 	
			
			}
			
		 } %>	

	</div>
	
	</div>

</div>





`;